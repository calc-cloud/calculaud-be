# Test Environment Variables
# Database (SQLite for testing)
DATABASE_URL=sqlite:///./test.db

# App Configuration
APP_NAME="Procurement Management System Test"
DEBUG=true
VERSION=1.0.0
ENVIRONMENT=test

# API Configuration
API_V1_PREFIX=/api/v1

# Pagination
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=200

# Authentication Configuration (OIDC Discovery - Mock values for testing)
# All endpoints (JWKS, issuer, token, algorithm) are auto-discovered from AUTH_OIDC_URL
AUTH_OIDC_URL=https://test-cognito.amazonaws.com/.well-known/openid-configuration
AUTH_AUDIENCE=api://test

# OAuth2 Client Configuration (for testing)
OAUTH_CLIENT_ID=test_client_id
OAUTH_SCOPES=openid

# AWS S3 Configuration (Mock values for testing)
AWS_ACCESS_KEY_ID=test_access_key
AWS_SECRET_ACCESS_KEY=test_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=test-bucket
S3_BUCKET_URL=https://test-bucket.s3.amazonaws.com
S3_KEY_PREFIX=test-files/

# Currency Configuration
USD_TO_ILS_RATE=3.7